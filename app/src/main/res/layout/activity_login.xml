<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    android:theme="@style/AppTheme1"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/imgLoginLogo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="8dp"
        android:src="@drawable/splash_screen" />

    <EditText
        android:id="@+id/loginMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLoginLogo"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="5dp"
        android:hint="@string/mobile_number_10_digits"
        android:inputType="phone"
        android:padding="8dp" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginMobileNumber"
        android:layout_marginTop="5dp"
        android:background="#FFF"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="5dp"
        android:hint="@string/password"
        android:inputType="numberPassword"
        android:padding="8dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPassword"
        android:layout_marginTop="20dp"
        android:background="#B12C14"
        android:padding="8dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/loginForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_margin="13dp"
        android:text="@string/login_forgot_password"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/loginRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/u_don_t_have_an_account_sign_up_now_u"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="17sp" />

</RelativeLayout>