<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="6dp"
    android:background="#ffffff"
    android:padding="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/l2Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6">

        <TextView
            android:id="@+id/orderIndex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="10"
            android:textColor="#A9A9A9"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/restaurantList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="3.3">

            <TextView
                android:id="@+id/orderRestaurantOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mexican Baco"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderPriceSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderRestaurantOrder"
                android:layout_marginTop="12dp"
                android:text="Rs."
                android:textColor="#A9A9A9"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderRestaurantOrder"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/orderPriceSign"
                android:text="100"
                android:textColor="#A9A9A9"
                android:textSize="13sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1.5"
            android:background="#FF4000"
            android:text="Add"
            android:textAlignment="center"
            android:textColor="#FFF" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
