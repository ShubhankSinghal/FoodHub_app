<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="2dp"
    android:background="#ffffff"
    android:padding="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/l2Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/orderIndex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="10"
            android:textColor="#A9A9A9"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/restaurantList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.8"
            android:padding="5dp">

            <TextView
                android:id="@+id/orderRestaurantOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:text="Mexican Baco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderRestaurantOrder"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:text="Rs. 200"
                android:textColor="#A9A9A9"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/orderButton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@color/orderButtonAdd"
            android:text="Add"
            android:textAlignment="center"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/orderButton1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@color/orderButtonRemove"
            android:text="Remove"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
