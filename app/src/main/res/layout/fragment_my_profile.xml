<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6347"
    android:padding="20dp"
    tools:context=".fragment.MyProfileFragment">

    <ImageView
        android:id="@+id/imgProfileImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProfileImage"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:padding="8dp"
        android:text="John Doe"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textProfileMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProfileName"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:padding="8dp"
        android:text="+91-1115555555"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProfileMobileNumber"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:padding="8dp"
        android:text="johnathan@doe.gmail"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textProfileLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProfileEmail"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:padding="8dp"
        android:text="Gurugram"
        android:textAlignment="center"
        android:textSize="18sp" />


</RelativeLayout>